<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".widget4.Color_Pick_W4Activity">

    <Spinner
        android:id="@+id/spinnerVariableColourPickW4"
        android:layout_width="135dp"
        android:layout_height="46dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toEndOf="@+id/textViewVariableColorPickW4"
        app:layout_constraintTop_toBottomOf="@+id/spinnerControlColourPickW4" />

    <TextView
        android:id="@+id/textViewVariableColorPickW4"
        android:layout_width="79dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:text="Variable"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewControlColorPickW4" />

    <Spinner
        android:id="@+id/spinnerControlColourPickW4"
        android:layout_width="135dp"
        android:layout_height="46dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="44dp"
        android:entries="@array/Control"
        app:layout_constraintStart_toEndOf="@+id/textViewControlColorPickW4"
        app:layout_constraintTop_toBottomOf="@+id/spinnerDeviceColourPickW4" />

    <TextView
        android:id="@+id/textViewControlColorPickW4"
        android:layout_width="140dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:text="Control/Status"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDeviceColorPickW4" />

    <Button
        android:id="@+id/buttonAddColorPickW4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="Add widget"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewVariableColorPickW4" />

    <TextView
        android:id="@+id/textViewColorPickW4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Color Picker"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextColorPickNameW4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewColorPickW4" />

    <TextView
        android:id="@+id/textViewDeviceColorPickW4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:text="Device"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextColorPickNameW4" />

    <Spinner
        android:id="@+id/spinnerDeviceColourPickW4"
        android:layout_width="135dp"
        android:layout_height="46dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="24dp"
        android:entries="@array/Devices"
        app:layout_constraintStart_toEndOf="@+id/textViewDeviceColorPickW4"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextColorPickNameW4" />

    <Button
        android:id="@+id/buttonColorPickW4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="Show widget"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerVariableColourPickW4" />

</androidx.constraintlayout.widget.ConstraintLayout>