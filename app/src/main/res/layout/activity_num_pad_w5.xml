<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".widget5.NumPadActivityW5">

    <Spinner
        android:id="@+id/spinnerVariableNumW5"
        android:layout_width="135dp"
        android:layout_height="41dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="28dp"
        android:entries="@array/Control"
        app:layout_constraintStart_toEndOf="@+id/textViewVariablelNumW5"
        app:layout_constraintTop_toBottomOf="@+id/spinnerControlNumW5" />

    <TextView
        android:id="@+id/textViewVariablelNumW5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:text="Variable"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewControlNumW5" />

    <Spinner
        android:id="@+id/spinnerControlNumW5"
        android:layout_width="135dp"
        android:layout_height="41dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:entries="@array/Control"
        app:layout_constraintStart_toEndOf="@+id/textViewControlNumW5"
        app:layout_constraintTop_toBottomOf="@+id/spinnerDeviceNumW5" />

    <TextView
        android:id="@+id/textViewControlNumW5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Control/Status"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDeviceNumW5" />

    <EditText
        android:id="@+id/editTextTextNumPadColorW5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Colour"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextNumPadNameW5" />

    <EditText
        android:id="@+id/editTextTextNumPadNameW5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNumPadW5" />

    <TextView
        android:id="@+id/textViewNumPadW5"
        android:layout_width="161dp"
        android:layout_height="27dp"
        android:layout_marginTop="16dp"
        android:text="Number Pad"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonNumPadW5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:text="Show Widget"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerVariableNumW5" />

    <TextView
        android:id="@+id/textViewDeviceNumW5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:text="Devices"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextNumPadColorW5" />

    <Spinner
        android:id="@+id/spinnerDeviceNumW5"
        android:layout_width="135dp"
        android:layout_height="41dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="20dp"
        android:entries="@array/Devices"
        app:layout_constraintStart_toEndOf="@+id/textViewDeviceNumW5"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextNumPadColorW5" />

    <Button
        android:id="@+id/buttonAddNumW5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:text="ADD widget"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewVariablelNumW5" />

</androidx.constraintlayout.widget.ConstraintLayout>