<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".widget2.NumPadActivityW2">

    <Spinner
        android:id="@+id/spinnerVariableNumW2"
        android:layout_width="135dp"
        android:layout_height="41dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="28dp"
        android:entries="@array/Control"
        app:layout_constraintStart_toEndOf="@+id/textViewVariablelNumW2"
        app:layout_constraintTop_toBottomOf="@+id/spinnerControlNumW2" />

    <TextView
        android:id="@+id/textViewVariablelNumW2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:text="Variable"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewControlNumW2" />

    <Spinner
        android:id="@+id/spinnerControlNumW2"
        android:layout_width="135dp"
        android:layout_height="41dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:entries="@array/Control"
        app:layout_constraintStart_toEndOf="@+id/textViewControlNumW2"
        app:layout_constraintTop_toBottomOf="@+id/spinnerDeviceNumW2" />

    <TextView
        android:id="@+id/textViewControlNumW2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Control/Status"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDeviceNumW2" />

    <EditText
        android:id="@+id/editTextTextNumPadColorW2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Colour"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextNumPadNameW2" />

    <EditText
        android:id="@+id/editTextTextNumPadNameW2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNumPadW2" />

    <TextView
        android:id="@+id/textViewNumPadW2"
        android:layout_width="161dp"
        android:layout_height="27dp"
        android:layout_marginTop="16dp"
        android:text="Number Pad"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonNumPadW2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:text="Show Widget"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerVariableNumW2" />

    <TextView
        android:id="@+id/textViewDeviceNumW2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:text="Devices"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextNumPadColorW2" />

    <Spinner
        android:id="@+id/spinnerDeviceNumW2"
        android:layout_width="135dp"
        android:layout_height="41dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="20dp"
        android:entries="@array/Devices"
        app:layout_constraintStart_toEndOf="@+id/textViewDeviceNumW2"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextNumPadColorW2" />

    <Button
        android:id="@+id/buttonAddNumW2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:text="ADD widget"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewVariablelNumW2" />

</androidx.constraintlayout.widget.ConstraintLayout>