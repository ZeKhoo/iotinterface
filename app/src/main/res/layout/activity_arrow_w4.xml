<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".widget4.ArrowActivityW4">

    <Button
        android:id="@+id/buttonAddArrowW4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="Add widget"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewVariableArrowW4" />

    <Spinner
        android:id="@+id/spinnerControlArrowW4"
        android:layout_width="119dp"
        android:layout_height="50dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="32dp"
        android:entries="@array/Control"
        app:layout_constraintStart_toEndOf="@+id/textViewControlArrowW4"
        app:layout_constraintTop_toBottomOf="@+id/spinnerDeviceArrowW4" />

    <TextView
        android:id="@+id/textViewVariableArrowW4"
        android:layout_width="78dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:text="Variable"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewControlArrowW4" />

    <TextView
        android:id="@+id/textViewControlArrowW4"
        android:layout_width="78dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="120dp"
        android:text="Control"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/spinnerVariableArrowW4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDeviceArrowW4" />

    <Spinner
        android:id="@+id/spinnerVariableArrowW4"
        android:layout_width="119dp"
        android:layout_height="50dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="36dp"
        android:entries="@array/Control"
        app:layout_constraintStart_toEndOf="@+id/textViewVariableArrowW4"
        app:layout_constraintTop_toBottomOf="@+id/spinnerControlArrowW4" />

    <Spinner
        android:id="@+id/spinnerDeviceArrowW4"
        android:layout_width="119dp"
        android:layout_height="50dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="32dp"
        android:entries="@array/Devices"
        app:layout_constraintStart_toEndOf="@+id/textViewDeviceArrowW4"
        app:layout_constraintTop_toBottomOf="@+id/spinnerArrowOk2W4" />

    <TextView
        android:id="@+id/textViewLeftRightArrowW4"
        android:layout_width="163dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:text="Left/Right Button:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOkArrowW4" />

    <EditText
        android:id="@+id/editTextTextArrowColorW4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Colour"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextArrowNameW4" />

    <EditText
        android:id="@+id/editTextTextArrowNameW4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewArrowW4" />

    <TextView
        android:id="@+id/textViewArrowW4"
        android:layout_width="222dp"
        android:layout_height="31dp"
        android:layout_marginTop="16dp"
        android:text="Arrow"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.915"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerArrowOk1W4"
        android:layout_width="119dp"
        android:layout_height="50dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="20dp"
        android:entries="@array/YesNo"
        app:layout_constraintStart_toEndOf="@+id/textViewOkArrowW4"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextArrowColorW4" />

    <Spinner
        android:id="@+id/spinnerArrowOk2W4"
        android:layout_width="119dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:entries="@array/YesNo"
        app:layout_constraintStart_toEndOf="@+id/textViewLeftRightArrowW4"
        app:layout_constraintTop_toBottomOf="@+id/spinnerArrowOk1W4" />

    <TextView
        android:id="@+id/textViewOkArrowW4"
        android:layout_width="131dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="OK  Button :"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextArrowColorW4" />

    <Button
        android:id="@+id/buttonArrowW4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:text="Show widget"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerVariableArrowW4" />

    <TextView
        android:id="@+id/textViewDeviceArrowW4"
        android:layout_width="64dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:text="Device"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLeftRightArrowW4" />

</androidx.constraintlayout.widget.ConstraintLayout>