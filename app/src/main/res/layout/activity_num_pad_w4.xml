<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".widget4.NumPadActivityW4">

    <Spinner
        android:id="@+id/spinnerVariableNumW4"
        android:layout_width="135dp"
        android:layout_height="41dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="28dp"
        android:entries="@array/Control"
        app:layout_constraintStart_toEndOf="@+id/textViewVariablelNumW4"
        app:layout_constraintTop_toBottomOf="@+id/spinnerControlNumW4" />

    <TextView
        android:id="@+id/textViewVariablelNumW4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:text="Variable"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewControlNumW4" />

    <Spinner
        android:id="@+id/spinnerControlNumW4"
        android:layout_width="135dp"
        android:layout_height="41dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:entries="@array/Control"
        app:layout_constraintStart_toEndOf="@+id/textViewControlNumW4"
        app:layout_constraintTop_toBottomOf="@+id/spinnerDeviceNumW4" />

    <TextView
        android:id="@+id/textViewControlNumW4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Control/Status"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDeviceNumW4" />

    <EditText
        android:id="@+id/editTextTextNumPadColorW4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Colour"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextNumPadNameW4" />

    <EditText
        android:id="@+id/editTextTextNumPadNameW4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNumPadW4" />

    <TextView
        android:id="@+id/textViewNumPadW4"
        android:layout_width="161dp"
        android:layout_height="27dp"
        android:layout_marginTop="16dp"
        android:text="Number Pad"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonNumPadW4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:text="Show Widget"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerVariableNumW4" />

    <TextView
        android:id="@+id/textViewDeviceNumW4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:text="Devices"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextNumPadColorW4" />

    <Spinner
        android:id="@+id/spinnerDeviceNumW4"
        android:layout_width="135dp"
        android:layout_height="41dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="20dp"
        android:entries="@array/Devices"
        app:layout_constraintStart_toEndOf="@+id/textViewDeviceNumW4"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextNumPadColorW4" />

    <Button
        android:id="@+id/buttonAddNumW4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:text="ADD widget"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewVariablelNumW4" />


</androidx.constraintlayout.widget.ConstraintLayout>